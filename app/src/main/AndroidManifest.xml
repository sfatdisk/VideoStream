<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bawanj.videostream" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.VideoActivity"
            android:label="@string/title_activity_video">
            <!--android:screenOrientation="landscape"  >-->
        </activity>

        <activity
            android:name=".activity.MediaPlayerActivity"
            android:label="@string/title_activity_media" >
        </activity>

        <activity
            android:name=".activity.VideoFragmentActivity"
            android:label=""/>

        <activity android:name=".activity.MediaFragmentActivity"/>

    </application>

</manifest>
