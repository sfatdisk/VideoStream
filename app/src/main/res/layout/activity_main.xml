<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <Button
        android:text="@string/btn_video_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_video_media_controller"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


    <Button
        android:text="@string/btn_video_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_video_media_player"
        android:layout_marginTop="16dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="@string/btn_video_frag_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_frag_video_media_controller"
        android:layout_marginTop="16dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="@string/btn_video_frag_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_frag_video_media_player"
        android:layout_marginTop="16dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


</LinearLayout>
